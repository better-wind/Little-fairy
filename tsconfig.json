{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./ts-dist",
    "types": [
      "jest",
      "koa",
      "koa-router",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "definitions/*": ["./definitions/*"]
    }
  },
  "include": ["./ts-node/**/*"],
  "exclude": [
    "**/node_modules"
  ]
}
